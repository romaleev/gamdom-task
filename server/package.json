{
	"name": "gamdom-task-server",
	"version": "1.0.0",
	"main": "dist/index.js",
	"private": true,
	"scripts": {
		"start": "NODE_ENV=development node --no-warnings=ExperimentalWarning --watch --import=tsx src/index.ts",
		"build": "tsc --project tsconfig.server.json && tsc-alias --project tsconfig.server.json",
		"prod": "wait-on tcp:database:5432 && NODE_ENV=production node /app/server/dist/index.js",
		"postgres:prepare": "npm run postgres:migrate && npm run postgres:seed",
		"postgres:migrate": "drizzle-kit generate && drizzle-kit migrate",
		"postgres:seed": "node --import=tsx src/db/seed.ts",
		"test": "jest --no-watchman --maxWorkers=80% --detectOpenHandles",
		"test:watch": "jest --watch --maxWorkers=80%",
		"test:coverage": "jest --coverage"
	},
	"type": "module",
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.13.4",
		"@types/pg": "^8.11.11",
		"jest": "^29.7.0",
		"jiti": "^2.4.2",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.10",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.24.0"
	},
	"dependencies": {
		"@types/supertest": "^6.0.2",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"drizzle-kit": "^0.30.4",
		"drizzle-orm": "^0.39.3",
		"express": "^4.21.2",
		"pg": "^8.13.3",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0",
		"supertest": "^7.0.0",
		"wait-on": "^8.0.2",
		"zod": "^3.24.2"
	}
}
